---
to: "{{configuration.embraceSQLRoot}}/openapi.yaml"
---

openapi: 3.0.0
info:
  title: --
  description: --
  version: --

paths:
{{#eachInMap databases}}
{{#eachInMap value.SQLModules}}
  /{{value.relativePath}}:
    {{> get module=value}}
{{/eachInMap}}
{{/eachInMap}}


{{#*inline "get"}}
{{#allSELECT module}}
get:
  operationId: get__{{module.contextName}}
  description: Read data
  responses:
    '200':
      description: Sucess
      {{> resultset module=module}}
{{/allSELECT}}
post:
  operationId: post__{{module.contextName}}
  description: Read data
  responses:
    '200':
      description: Sucess
      {{> resultset module=module}}
{{/inline}}

{{#*inline "post"}}
{{/inline}}

{{#*inline "resultset"}}
content:
  application/json:
    schema:
      type: array
      items: 
        type: object
        properties: 
        {{#each module.resultsetMetadata}}
          {{name}}:
            type: {{type}}
        {{/each}}
{{/inline}}